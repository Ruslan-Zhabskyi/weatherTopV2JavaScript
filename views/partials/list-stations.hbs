{{#each stations}}

<div class="content box">
    <h1 class="title">
        {{name}}
    </h1>

    <div class="columns">

        <div class="column is-one-fifth">

            <div class="card">
                <div class="card-content">
                    <div class="content has-text-centered">
                        <h2>{{name}}</h2>
                        Lat: {{latitude}} <br>
                        Lng: {{longitude}}
                    </div>
                </div>
            </div>

        </div>

        <div class="column is-one-fifth">

            <div class="card">
                <div class="card-content">
                    <div class="content has-text-centered">
                       <h2>Weather
                      
                          {{#if (eq weatherCodeDecrypted 'Rain')}}
                              <i class="fas fa-cloud-rain"></i>
                          {{else if (eq weatherCodeDecrypted 'Cloudy')}}
                              <i class="fas fa-cloud"></i>
                          {{else if (eq weatherCodeDecrypted 'Partial clouds')}}
                              <i class="fas fa-cloud-sun"></i>
                          {{else if (eq weatherCodeDecrypted 'Clear')}}
                              <i class="fas fa-sun"></i>
                          {{else if (eq weatherCodeDecrypted 'Light Showers')}}
                              <i class="fas fa-cloud-sun-rain"></i>
                          {{else if (eq weatherCodeDecrypted 'Heavy Showers')}}
                              <i class="fas fa-cloud-showers-heavy"></i>
                          {{else if (eq weatherCodeDecrypted 'Snow')}}
                              <i class="fas fa-snowflake"></i>
                          {{else if (eq weatherCodeDecrypted 'Thunder')}}
                              <i class="fas fa-cloud-bolt"></i>
                          {{else}}
                              <i></i>
                      {{/if}}
                      
                      </h2>
                        {{weatherCodeDecrypted}}
                    </div>
                </div>
            </div>

        </div>

        <div class="column is-one-fifth">

            <div class="card">
                <div class="card-content">
                    <div class="content has-text-centered">
                        <h2>Temp
                          {{#if (gte temperature 20)}}
                          <i class="fas fa-temperature-high"></i>  
                          {{else if (gte temperature 10)}}
                           <i class="fas fa-temperature-half"></i>
                          {{else if (lt temperature 10)}}
                           <i class="fas fa-temperature-low"></i>
                      {{else}}
                          <i></i>
                          {{/if}}
                          
                          {{#if (eq stationTrends.temperatureTrend 'increasing')}}
                          <i class="fas fa-arrow-up"></i>
                      {{else if (eq stationTrends.temperatureTrend 'decreasing' )}}
                             <i class="fas fa-arrow-down"></i>
                      {{else}}
                      <i></i>
                      {{/if}}
                              
                      </h2>
                        {{temperature}} C <br>
                        {{temperatureInF}} F <br>
                        Min: {{minMaxStats.minTemperature}} <br>
                        Max: {{minMaxStats.maxTemperature}} 
                    </div>
                </div>
            </div>

        </div>

        <div class="column is-one-fifth">

            <div class="card">
                <div class="card-content">
                    <div class="content has-text-centered">
                       <h2>Wind
                      <i class="fas fa-wind"></i>
                          
                       {{#if (eq stationTrends.windSpeedTrend 'increasing')}}
                          <i class="fas fa-arrow-up"></i>
                      {{else if (eq stationTrends.windSpeedTrend 'decreasing' )}}
                             <i class="fas fa-arrow-down"></i>
                      {{else}}
                      <i></i>
                      {{/if}}
                      
                          
                      </h2>
                        {{windBft}} bft
                        ({{windBftLabel}}) <br>
                        {{windDirection}} <br>
                        Feels like: {{windChill}} <br>
                        Min: {{minMaxStats.minWindSpeed}} <br>
                        Max: {{minMaxStats.maxWindSpeed}}
                    </div>
                </div>
            </div>

        </div>

        <div class="column is-one-fifth">

            <div class="card">
                <div class="card-content">
                    <div class="content has-text-centered">
                        <h2>Pressure
                      <i class="fas fa-gauge"></i>
                          
                      {{#if (eq stationTrends.pressureTrend 'increasing')}}
                          <i class="fas fa-arrow-up"></i>
                      {{else if (eq stationTrends.pressureTrend 'decreasing' )}}
                          <i class="fas fa-arrow-down"></i>
                      {{else}}
                      <i></i>
                      {{/if}}
                              
                          
                      </h2>
                        {{pressure}} hpa <br>
                        Min: {{minMaxStats.minPressure}} hpa<br>
                        Max: {{minMaxStats.maxPressure}} hpa
                    </div>
                </div>
            </div>

        </div>

    </div>
    <a href="/station/{{_id}}" class="button">
        {{>icons/open}}
    </a>
    <a href="/dashboard/deleteplaylist/{{_id}}" class="button">
        {{>icons/delete}}
    </a>
</div>


{{/each}}